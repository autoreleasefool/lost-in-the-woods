<article class="post-card {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
        <div class="post-card-content">
            <a class="post-card-link" href="{{url}}">
                <div class="post-card-header">
                    {{#if feature_image}}
                        <img class="post-card-image"
                            srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w"
                            sizes="(max-width: 1000px) 400px, 700px"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{title}}"
                        />
                    {{/if}}
                    <div class="post-card-title-wrapper {{#if feature_image}}post-card-image-title-wrapper{{/if}}">
                        <h2 class="post-card-title {{#if feature_image}}post-card-image-title{{/if}} header">{{title}}</h2>
                    </div>
                </div>
                <p class="post-card-excerpt">{{excerpt}}</p>
            </a>
            <div class="post-card-details">
                <div class="post-card-detail post-card-date">
                    {{> "icons/calendar"}}
                    <p>{{date published_at format="YYYY/mm/d"}}</p>
                </div>

                <div class="post-card-detail post-card-tags">
                    {{> "icons/tags"}}
                    <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                </div>
            </div>
        </div>
</article>
