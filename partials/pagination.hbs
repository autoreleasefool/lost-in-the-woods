<nav class="pagination" role="navigation">
    <div class="prev">
        {{#if prev}}
            <a class="newer-posts" href="{{page_url prev}}">&larr; Newer<span class="hide-small-screen"> Posts</span></a>
        {{/if}}
    </div>
    <span class="page-number">Page {{page}} of {{pages}}</span>
    <div class="next">
        {{#if next}}
            <a class="older-posts" href="{{page_url next}}">Older<span class="hide-small-screen"> Posts</span> &rarr;</a>
        {{/if}}
    </div>
</nav>
