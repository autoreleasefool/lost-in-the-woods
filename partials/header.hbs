<header class="lw-head">
    <div class="lw-head-left"></div>
    <div class="lw-head-container">
        <div class="lw-head-brand">
            <a href="{{@site.url}}"><h1 class="lw-head-title">{{@site.title}}</h1></a>
            <h2 class="lw-head-description">{{@site.description}}</h2>
        </div>

        <div class="lw-head-nav-container">
            <div class="lw-head-nav">
                {{navigation}}
            </div>
            <div class="lw-head-social">
                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/twitter.png"}}" /></a>
                {{/if}}
                <a href="https://github.com/josephroquedev" title="GitHub" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/github.png"}}" /></a>
                <a href="{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/rss.png"}}" /></a>
            </div>
        </div>
    </div>
    <div class="lw-head-right"></div>
</header>

<div class="lw-banner">
    <div class="lw-banner-container">
        <div class="lw-banner-brand">
            <a href="{{@site.url}}"><h1 class="lw-banner-title">{{@site.title}}</h1></a>
        </div>

        <div class="lw-banner-separator"></div>

        <div class="lw-banner-nav-container">
            <div class="lw-banner-nav">
                {{navigation}}
            </div>
        </div>

        <div class="lw-banner-nav-container lw-banner-nav-container-social">
            <div class="lw-banner-separator"></div>

            <div class="lw-banner-social">
                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/twitter.png"}}" /></a>
                {{/if}}
                <a href="https://github.com/josephroquedev" title="GitHub" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/github.png"}}" /></a>
                <a href="{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener"><img class="icon" src="{{asset "built/images/icons/rss.png"}}" /></a>
            </div>
        </div>
    </div>
</div>
