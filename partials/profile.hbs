<div class="lw-profile">
    {{#get "authors" limit="1"}}
        {{#foreach authors}}
            <div class="lw-profile-author">
                <img class="profile-image" src="{{profile_image}}" />
                <p class="profile-name">{{name}}</p>
                <p class="profile-bio">{{bio}}</p>
                <ul class="profile-links">
                    <li><a href="{{website}}">{{> "icons/person"}} <span class="extract-hostname">{{website}}</span></a></li>
                    <li><a href="https://twitter.com/{{slug}}">{{> "icons/twitter"}} <span>@{{slug}}</span></a></li>
                    <li><a href="https://github.com/{{slug}}">{{> "icons/github"}} <span>@{{slug}}</span></a></li>
                </ul>
            </div>
        {{/foreach}}
    {{/get}}
</div>
